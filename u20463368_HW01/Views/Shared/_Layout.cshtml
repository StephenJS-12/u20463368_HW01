<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <title>@ViewBag.Title - RescueBus</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light">
        <div class="container">
            @Html.ActionLink("RescueBus", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <img src="~/Content/Images/logofinal.png" class="img-center" height="50" width="50" />
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex w-25">
                <ul class="navbar-nav float-end">
                    <li style="float:right">@Html.ActionLink("Home Page", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li style="float:right">@Html.ActionLink("Ride History", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li style="float:right">@Html.ActionLink("Management", "ManagementTable", "ListDrivers", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - RescueBus</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
