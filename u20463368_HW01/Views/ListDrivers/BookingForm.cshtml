    // Function to generate a unique global identifier (BookingID)
    function generateBookingID() {
        var timestamp = Date.now().toString(36); // Convert current timestamp to base36 string
        var randomNum = Math.random().toString(36).substr(2, 5); // Generate random number and convert to base36 string
        var uniqueID = timestamp + randomNum;

        return uniqueID;
